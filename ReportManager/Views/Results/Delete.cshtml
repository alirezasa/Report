@model ReportManager.Models.Result

@{
    ViewBag.Title = "حذف اطلاعات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index", new { }, new { @class = "btn btn-primary btn-md" })

</div>

<h2>حذف اطلاعات</h2>

<h3>آیا مطمئن هستید که می خواهید این را حذف کنید؟</h3>
<div>
    <h4>سوابق کاری</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            کد کاربر
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            سال مالی
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            ماه
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Month)
        </dd>

        <dt>
            تعداد روز کاری
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkingDays)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" />
        </div>
    }
</div>
