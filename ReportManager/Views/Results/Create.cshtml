@model ReportManager.Models.Result


@{
    ViewBag.Title = "افزودن سابقه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @Html.ActionLink("بازگشت به لیست", "Index", new { }, new { @class = "btn btn-primary btn-md" })

</div>

<h2>افزودن</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>سوابق کاری</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="UsertId" class="form-label">کد کاربر</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="UsertId" class="form-label">سال مالی</label>


            <div class="col-md-10">

                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="UsertId" class="form-label">ماه</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Month, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="UsertId" class="form-label">تعداد روز کاری</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.WorkingDays, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WorkingDays, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="mt-2">
            <input type="submit" value="ذخیره" class="btn btn-success" />

        </div>
    </div>
}




