@model ReportManager.Models.TimeSheet

@{
    ViewBag.Title = "نمایش جزئیات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index", new { }, new { @class = "btn btn-primary btn-md" })

</div>
<h2>نمایش جزئیات</h2>

<div>
    <h4>سوابق کاری</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            کد کاربر
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserID)
        </dd>

        <dt>
            سال مالی
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>

        <dt>
            ماه
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Month)
        </dd>

        <dt>
            تعداد روز کاری
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WorkingDays)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("ویرایش اطلاعات ", "Edit", new { id = Model.ID }, new { @class = "btn btn-success" })


</p>
